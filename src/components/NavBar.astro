---
import CloseMenuIcon from "@assets/CloseMenuIcon.astro"
import OpenMenuIcon from "@assets/OpenMenuIcon.astro"
---

<button
  type="button"
  aria-expanded="false"
  aria-controls="mobile-menu-4"
  data-collapse-toggle="mobile-menu-4"
  class="md:hidden text-gray-500 hover:bg-gray-100 focus:outline-none rounded-lg text-sm p-2 inline-flex items-center dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
>
  <span class="sr-only">Open main menu</span>
  <OpenMenuIcon />
  <CloseMenuIcon />
</button>
